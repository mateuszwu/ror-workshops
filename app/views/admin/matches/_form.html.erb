<%= form_for [@round, @match], as: :match, url: admin_round_matches_path do |form| %>
  <% if @match.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(@match.errors.count, "error") %> prohibited this match from being saved:</h2>

      <ul>
        <% @match.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :match_date, class: "form-label" %>
    <%= form.date_field :match_date, class: "form-control" %>
    <%= form.label :home_team_id, class: "form-label" %>
    <%= form.select :home_team_id, @teams, {}, class: "form-select" %>
    <%= form.label :away_team_id, class: "form-label" %>
    <%= form.select :away_team_id, @teams, {}, class: "form-select" %>
    <%= form.label :round_id, class: "form-label" %>
    <%= form.select :round_id, @rounds, {}, class: "form-select" %>
  </div>

  <div class="form-group mb-3">
    <%= form.submit class:'btn btn-success'%>
  </div>
<% end %>

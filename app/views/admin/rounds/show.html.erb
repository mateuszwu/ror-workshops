<div class="container">
  <%= link_to "Back to Admin Panel", admin_root_path, class: "btn btn-secondary mb-3" %>
  <div class="card mb-3" style="width: 18rem;" id="<%= dom_id @round %>">
    <div class="card-body">
      <h5 class="card-title"><%= "#{@round.number}/#{@round.year}" %></h5>
    </div>
  </div>
  <div class="d-flex gap-3">
    <%= link_to "Edit this round", edit_admin_round_path(@round), class: "btn btn-primary" %>
    <%= link_to "Destroy this round", admin_round_path(@round), class: "btn btn-danger", data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete #{@round.number} round?" } %>
  </div>
</div>
<div class="container">
  <%= link_to "Back to teams", admin_teams_path, class: "btn btn-secondary mb-3" %>
  <div class="card mb-3" style="width: 18rem;" id="<%= dom_id @team %>">
    <%= view_logo(@team) %>
    <div class="card-body">
      <h5 class="card-title"><%= @team.name %></h5>
    </div>
  </div>
  <div class="d-flex gap-3">
    <%= link_to "Edit this team", edit_admin_team_path(@team), class: "btn btn-primary" %>
    <%= link_to "Destroy this team", admin_team_path(@team), class: "btn btn-danger", data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete: #{@team.name}" } %>
  </div>
</div>
<%= form_with(model: [round, match, bet]) do |form| %>
  <% if bet.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(bet.errors.count, "error") %> prohibited this match from being saved:</h2>

      <ul>
        <% bet.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

    <div class='row'>
      <% if @match.persisted? && Date.today > @match.match_date %>
        <div class='col-md-6'>
          <%= form.label :home_team_score, class: "form-label" %>
          <%= form.text_field :home_team_score, class: "form-control" %>
        </div>
        <div class='col-md-6'>
          <%= form.label :away_team_score, class: "form-label" %>
          <%= form.text_field :away_team_score, class: "form-control" %>
        </div>
      <% end %>

    </div>
  </div>

  <div class="form-group mb-3">
    <%= form.submit class: 'btn btn-success' %>
  </div>
<% end %>

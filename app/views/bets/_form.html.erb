<%= form_with(model: [@round, @match, @bet]) do |form| %>
  <div class="mb-3">
    <div class="row">
      <div class='col-md-6'>
        <%= form.label "#{match.home_team.name}", class: "form-label" %>
        <%= form.date_field :match_date, class: "form-control" %>
      </div>
    </div>
    
  </div>

  <div class="form-group mb-3">
    <%= form.submit class:'btn btn-success'%>
  </div>
<% end %>


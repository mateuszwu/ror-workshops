<%= form_with model: [@round, @match, @bet] do |form| %>
  <% if @bet.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(@bet.errors.count, "error") %> prohibited this match from being saved:</h2>

      <ul>
        <% @bet.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <h3><%= @match.match_date %></h3>
    <h4><%= @match.home_team.name %></h4>
    <%= form.label :set_score, class: "form-label" %>
    <%= form.number_field :home_team_score, class: "form-control" %>
    <br>
    <h4><%= @match.away_team.name %></h4>
    <%= form.label :set_score, class: "form-label" %>
    <%= form.number_field :away_team_score, class: "form-control" %>
  </div>

  <div class="form-group mb-3">
    <%= form.submit class:'btn btn-success'%>
  </div>
<% end %>
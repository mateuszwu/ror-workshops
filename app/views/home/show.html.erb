Welcome to the Football Typper


<ol>
<% @users.each do |user| %>
<li>
<%= user.full_name %>
<%= user.points %>
</li>
<% end %>
</ol>

Rounds

<table class="table">
    <thead>
      <tr>
        <th>
        </th>
        <% @users.each do |user| %>
        <th>
        <%= user.full_name %>
        </th>
        <% end %>
      </tr>
    </thead>
    <tbody>
      <% @rounds.each do |round| %>
      <% round.matches.each do |match| %>
      <tr>
          <td>
            <%= match.home_team.name%> vs <%=match.away_team.name%>
          </td>
          <% @users.each do |user| %>
          <td>
            <%= user%>
          </td>
          <% end %>
        </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>


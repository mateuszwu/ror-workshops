<%= form_with(model: [round,match]) do |form| %>
  <% if match.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(match.errors.count, "error") %> prohibited this match from being saved:</h2>

      <ul>
        <% match.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :date, class: 'form-label' %>
    <%= form.date_field :date, class: "form-control" %>
  </div>
  <div class="mb-3">
    <%= form.label :home_team, class: 'form-label' %>
    <%= form.elect :home_team_id, Team.pluck(:name,:id), class: "form-control" %>
  </div>
  <div class="mb-3">
    <%= form.label :away_team, class: 'form-label' %>
    <%= form.text_field :away_team_id, Team.pluck(:name,:id), class: "form-control" %>
  </div>

  <div class="form-group mb-3">
    <%= form.submit class:'btn btn-success'%>
  </div>
<% end %>

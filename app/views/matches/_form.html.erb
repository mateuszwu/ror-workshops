<%= form_with(model: [round, match]) do |form| %>
  <% if match.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(match.errors.count, "error") %> prohibited this match from being saved:</h2>

      <ul>
        <% match.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <div class="row">
      <div class='col-md-6'>
        <%= form.label :match_date, class: "form-label" %>
        <%= form.date_field :match_date, class: "form-control" %>
      </div>
    </div>
    <div class='row'>
      <div class='col-md-6'>
        <%= form.label :home_team_id, class: "form-label" %>
        <%= form.select :home_team_id, @teams, {}, class: "form-select" %>
      </div>
      <div class='col-md-6'>
        <%= form.label :away_team_id, class: "form-label" %>
        <%= form.select :away_team_id, @teams, {}, class: "form-select" %>
      </div>
<% if is_edit %>
      <div class='col-md-6'>
        <%= form.label :home_team_score, class: "form-label" %>
        <%= form.text_field :home_team_score, class: "form-select" %>
      </div>
      <div class='col-md-6'>
        <%= form.label :away_team_score, class: "form-label" %>
        <%= form.text_field :away_team_score, class: "form-select" %>
      </div>
    </div>
  </div>
<% end %>
  <div class="form-group mb-3">
    <%= form.submit class:'btn btn-success'%>
  </div>
<% end %>

<h1>Edit Match</h1>
<div class="d-flex gap-3 mb-3" >
  <%= link_to "Back to round", @round, class: "btn btn-secondary" %>
</div>


<%= form_with(model: [@round, @match]) do |form| %>
  <% if @match.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(@match.errors.count, "error") %> prohibited this @match from being saved:</h2>

      <ul>
        <% @match.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <div class="row">
      <div class='col-md-6'>
        <%= form.label :match_date, class: "form-label" %>
        <%= form.date_field :match_date, class: "form-control" %>
      </div>
    </div>
    <div class='row'>
      <div class='col-md-6'>
        <%= form.label :home_team_id, class: "form-label" %>
        <%= form.select :home_team_id, @teams, {}, class: "form-select" %>
      </div>
      <div class='col-md-6'>
        <%= form.label :home_team_id, class: "form-label" %>
        <%= form.select :home_team_id, @teams, {}, class: "form-select" %>
      </div>
      <% if @match.match_date.past? %>
        <div class='col-md-6'>
          <%= form.label :away_team_id, class: "form-label" %>
          <%= form.number_field :away_team_score, in: 0..99, step: 1, class: "form-input" %>
        </div>
        <div class='col-md-6'>
          <%= form.label :home_team_id, class: "form-label" %>
          <%= form.number_field :home_team_score, in: 0..99, step: 1, class: "form-input" %>
        </div>
      <% end %>
    </div>
  </div>

  <div class="form-group mb-3">
    <%= form.submit class:'btn btn-success'%>
  </div>
<% end %>


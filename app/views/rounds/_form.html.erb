<div class="container d-flex justify-content-center mt-5">
  <div class="card  text-center">
    <div class="card-header">
      <h1>Round</h1>
    </div>
    <div class="card-body">
      <%= form_with(model: round) do |form| %>
        <div class="form-group">
          <%= form.text_field :year, class: "form-control mb-3" , placeholder: "Round Year" %>
        </div>
        <div class="form-group">
          <%= form.text_field :number, class: "form-control mb-3", placeholder: "Round Number" %>
        </div>
        <div class="form-group">
          <%= form.submit class:'btn btn-primary'%>
        </div>
      <% end %>
    </div>
    <div class="card-footer">
      <%= link_to "Back", rounds_path, class: "btn btn-secondary" %>
    </div>
  </div>
</div>
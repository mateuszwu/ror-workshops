<h1>Scheduled rounds</h1><%= link_to "Create new round", new_round_path, class: "btn btn-primary float-right mb-3" %>

<% @rounds.each do |round| %>
  <div class="card w-25">
    <div class="card-body d-flex justify-content-between align-items-center">
  <%=round.number %>/<%= round.year %><%= link_to "Show this round", round, class: "btn btn-primary float-right" %>
    </div>
  </div>
<% end %>
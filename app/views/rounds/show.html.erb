<div class="container">
  <%= link_to "Back to rounds", rounds_path, class: "btn btn-secondary mb-3" %>
  <div class="card mb-3" style="width: 18rem;" id="<%= dom_id @round %>">
    <div class="card-body">
      <h5 class="card-title text-center"><%= "#{@round.number}/#{@round.year}" %></h5>
    </div>
  </div>


  <div class="d-flex gap-3">
    <%= link_to "Edit this round", edit_round_path(@round), class: "btn btn-primary"%>
    <%= link_to "Destroy this round", @round, class: "btn btn-danger", data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this round?" } %>
    <%= link_to "Add new match", new_round_match_path(@round), class: "btn btn-primary"%>
  </div>

  <div id="matches" class="d-flex flex-row flex-wrap bd-highlight mb-3 gap-3">
    <table class="table">
  <thead class="thead-dark">
    <tr>
      <th scope="col">#</th>
      <th scope="col">Date</th>
      <th scope="col">Home</th>
      <th scope="col">Away</th>
      <th scope="col"></th>
    </tr>
  </thead>
    <% @matches.each do |match| %>
      <tr>
      <th scope="row"></th>
      <td><%= match.date %></td>
      <td><%= match.home_team.name %></td>
      <td><%= match.away_team.name %></td>
      <td><%= link_to "Edit this match", edit_round_match_path(@round, match), class: "btn btn-info"%></td>
      </tr>
    <% end %>
    </tbody>
</table>
  </div>


  
</div>
<div class="container">
  <div>
    <%= link_to "Back to rounds", rounds_path, class: "btn btn-secondary mb-3" %>
  </div>
  <div class="card w-50 text-center">
    <div class="card-header">
      <h1>Round</h1>
    </div>
    <div class="card-body">
      <strong> <%= @round.year %> / <%= @round.number %></strong>
    </div>
    <% if current_user.admin_profile? %>
      <div class="card-footer">
        <%= link_to "Edit", edit_round_path(@round), class: "btn btn-primary" %>
        <%= link_to "Delete", @round, class: "btn btn-danger", data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete ?" } %>
      </div>
    <% end %>
  </div>
</div>
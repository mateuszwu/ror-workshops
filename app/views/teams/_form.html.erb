<%= form_with(model: team) do |form| %>
  <% if team.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(team.errors.count, "error") %> prohibited this team from being saved:</h2>

      <ul>
        <% team.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="card text-center w-50 mx-auto">
    <% if team.logo.attached? %>
      <div class="mx-auto">
        <%= image_tag team.logo, style: "width: 200px; height: 200px;", alt: "Team #{team.name} logo" %>
      </div>
    <% end %>
    <div class="card-body">
      <%= form.label :logo, class: "form-label" %>
      <%= form.file_field :logo, class: "form-control" %>
      <%= form.label :name, class: "form-label" %>
      <%= form.text_field :name, class: "form-control" %>
      <div id="emailHelp" class="form-text">Full team name eg. Arsenal F.C.</div>
    </div>
    <div class="card-footer">
      <div class="form-group mb-3">
        <%= form.submit class: 'btn btn-success' %>
      </div>
    </div>
  </div>

<% end %>
<%= form_with(model: team) do |form| %>
  <% if team.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(team.errors.count, "error") %> prohibited this team from being saved:</h2>

      <ul>
        <% team.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="mb-3" style="width: 18rem;">
    <%= image_tag team.avatar.variant(:thumb) ?  team.avatar : 'blank-team-logo.png' , alt: "Team #{team.name} logo", class: "card-img-top" %>
    <%= form.file_field :avatar, class: "form-control" %>
  </div>
  <div class="mb-3" style="width: 18rem;"> 
    <%= form.label :name, class: "form-label" %>
    <%= form.text_field :name, class: "form-control" %>
    <div id="emailHelp" class="form-text">Full team name eg. Arsenal F.C.</div>
  </div>

  <div class="form-group mb-3">
    <%= form.submit class:'btn btn-success'%>
  </div>
<% end %>
